!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
      %title #{page.title}
      %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
        %meta{:content => "", :name => "description"}
          %meta{:content => "", :name => "author"}
            / Le styles
            %link{:href => "css/bootstrap.css", :rel => "stylesheet"}
            %link{:href => "css/blackboard.css", :rel => "stylesheet"}
              :css
                body {
                  padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
                }
                  %link{:href => "css/bootstrap-responsive.css", :rel => "stylesheet"}
                / HTML5 shim, for IE6-8 support of HTML5 elements

  %body
    .container
      .row(style="margin-bottom:10px")
        .span2.offset1
          %img{:src=>'img/atlas.png',:width=>'150px'}
        .span7
          %h1(style="margin-top:38px") Atlas Schema Definition
          %h4(style="margin-top:-10px") v1.0.0
      .row
        .span3(style="margin-top:17px")
          .well
            %ul.nav.nav-list
              %li.nav-header
              %li{:class => page.title == "Atlas Schema / Introduction" ? "active" : ""}
                %a(href="index.html") Introduction
              %li{:class => page.title == "Atlas Schema / Sections" ? "active" : ""}
                %a(href="sections.html") Sections
              %li{:class => page.title == "Atlas Schema / Nodes" ? "active" : ""}
                %a(href="nodes.html") Nodes
              %li{:class => page.title == "Atlas Schema / Relationships" ? "active" : ""}
                %a(href="relationships.html") Relationships
              %li{:class => page.title == "Atlas Schema / Features" ? "active" : ""}
                %a(href="features.html") Features   
          %a(href="http://dataset.io")
            %img(src='img/dataset-io-small.png')     
        .span9
          ~ content
    %script{:type => "text/javascript", :src  => "js/jquery-1.9.0.min.js"}      
    %script{:type => "text/javascript", :src  => "js/rainbow-custom.min.js"}
    :javascript
      $(document).ready(function() {
          function showHiddenParagraphs() {
              $("p.hidden").fadeIn(500);
          }
          setTimeout(showHiddenParagraphs, 1000);
      });
